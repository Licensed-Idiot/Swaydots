* {
  accent: #3c3836;
  bg: rgba(29, 32, 33, 0.65);
  fg: #a89984;
  text: #ebdbb2;
  select: #689d6a;
  background-color: @bg;
  text-color: @text;
  font: "CaskaydiaCove Nerd Font 12";
}

element-text,
element-icon,
mode-switcher {
  background-color: inherit;
  text-color: inherit;
}

window {
  width: 648px;
  transparency: "real";
  border: 2px;
  border-radius: 5px;
  border-color: #282828;
}

textbox-prompt-colon {
  padding: 8px 6px;
  border: 0 0 2px 0;
  border-color: none;
  str: "ï€‚ ";
  expand: false;
}


entry {
  placeholder: "Search";
  placeholder-color: @fg;
  text-color: @text;
  border: 0 0 2px 0;
  border-color: @text;
  padding: 8px 2px;
  expand: true;
}

inputbar {
  children: [textbox-prompt-colon,entry];
  expand: false;
  spacing: 0;
  margin: 20px;
}

listview {
  background-color: @accent;
  columns: 1;
  lines: 7;
  spacing: 0;
  cycle: false;
  dynamic: true;
  layout: vertical;
  margin: 0 20px;
  border-radius: 5px;
  scrollbar: false;
}

mainbox {
  children: [inputbar,listview,mode-switcher];
}


element {
  orientation: horizontal;
  padding: 12px 24px;
  
  background-color: @accent;
}

element-text {
  expand: true;
  margin: 0 10px;
  
  background-color: inherit;
  text-color: inherit;
}

element selected {
  text-color: @select;
  border-radius: 5px;
}

mode-switcher {
  background-color: @accent;
  spacing: 0;
  border-color: green;
  border-radius: 5px;
  margin: 20px;
}

button {
  padding: 15px;
  margin: 0;
  
  text-color: @text;
  background-color: @accent;
}

button selected {
  padding: 8px;
  border-radius: 5px;
  text-color: #1d2021;
  background-color: @fg;
}
